alias lsa='ls -al'
alias ls='ls -FG'
alias ll='ls -AGlFTtr'
alias histories='cat ~/.histories/.bash*'
alias ql='qlmanage -p "$@" >& /dev/null'
alias lc="cl"
alias tcpdumper='sudo tcpdump -s 0 -A -i en1 port 80'
alias privoxy_start='privoxy /usr/local/etc/privoxy/config'
alias gc='git commit -a -m'
alias gitcm='git commit -a -m'
alias gitcam='git commit -a -m'
alias gs='git status'
alias gitst='git status'
alias gitsta='git status'
alias gp='git push'
alias gpm='git push origin master:refs/heads/master'
alias gl='git log --shortstat'
alias ga='git add'
alias mysqlmy='mysql -u root -p'
alias apinfo='/System/Library/PrivateFrameworks/Apple80211.framework/Versions/A/Resources/airport -I'
#alias sc="script/console"
#alias ss="script/server"
alias rt="rake test"
alias mvimt="mvim -c 'NERDTree'"
alias ctags="/usr/local/bin/ctags"

function cl () {
   if [ $# = 0 ]; then
      cd && ll
   else
      cd "$*" && ll
   fi
}

#mkdir, cd into it
# http://onethingwell.org/post/561049890
function mkcd {
    mkdir $1
    cd $1
}

#Edge-Rails
function edgie() { 
  ruby ~/rails/edge/railties/bin/rails $1 && cd $1 && ln -s ~/rails/edge vendor/rails && mate . 
}

# Manpage in Preview anzeigen
# http://news.ycombinator.com/item?id=1157864
function pdfman () {
	man -t $1 | open -a /Applications/Preview.app -f
}

function ss {
	if [ -f script/server ]; then
		script/server
	else
		rails server
	fi
}

function sc {
	if [ -f script/console ]; then
		script/console
	else
		rails console
	fi
}
